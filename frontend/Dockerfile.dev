# Development Dockerfile for Next.js with hot reloading
FROM node:24

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package*.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY ./ /app/

# Expose port
EXPOSE 3000

# Start development server with hot reloading
CMD ["pnpm", "run", "dev"]
